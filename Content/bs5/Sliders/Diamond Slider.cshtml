@inherits Custom.Hybrid.Razor14
@using ToSic.Razor.Blade;

<div class="slider diamond my-5 " @Edit.TagToolbar(Content, toolbar: new[] { "toolbar=empty", "+edit", "+new", "+replace", "+add-existing", "+list"})>
    <div class="title col-12 mt-5 text-center">
        <h4>@Content.Title</h4>
    </div>
    <hr class="hr-center" />
    <div id="DiamondSlider" style="width: 90%; display: inline-block;">
      @foreach (var slide in AsList(Content.Slides)) {
          <div class="item" @Edit.TagToolbar(slide, toolbar: new[] { "toolbar=empty", "+edit", "+new", "+replace", "+add-existing", "+list"})>
            @if(Text.Has(slide.Image)){
              <div class="item-img">
                <img src="@slide.Image" alt="@slide.Title" />
              </div>
            } else {
              <div class="no-img">
                <div class="bg"></div>
              </div>
            }
            <div class="item-text">
            @Html.Raw(slide.Text)
            </div>
          </div>
      }
      
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function(){
      $('#DiamondSlider').slick({
        centerMode: true,
        centerPadding: '70px',
        slidesToShow: 3,
        adaptativeHeight: false,
        responsive: [
            {
            breakpoint: 768,
            settings: {
                arrows: true,
                centerMode: true,
                centerPadding: '40px',
                slidesToShow: 1
            }
            },
            {
            breakpoint: 480,
            settings: {
                arrows: true,
                centerMode: true,
                centerPadding: '40px',
                slidesToShow: 1
            }
            }
        ]
      });
      $("hr.hr-center").appendTo("#DiamondSlider")
    });
  </script>